<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_list_query_bar"
            android:layout_marginBottom="@dimen/common_margin_middle"
            android:layout_marginEnd="@dimen/common_margin_short"
            android:layout_marginStart="@dimen/common_margin_short"
            android:layout_marginTop="@dimen/common_margin_middle"
            android:orientation="horizontal">

            <android.support.v7.widget.SearchView
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/common_margin_long"
                android:layout_marginStart="@dimen/common_margin_long"
                android:background="@drawable/border_rectangle"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/restaurant_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/common_margin_short"
            android:layout_marginStart="@dimen/common_margin_short"
            android:layout_weight="1"
            app:layoutManager="LinearLayoutManager" />
    </LinearLayout>
</layout>
