<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_restaurant_cell_height"
        android:background="?selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin_middle">

        <ImageView
            android:id="@+id/restaurant_image"
            android:layout_width="@dimen/search_restaurant_cell_image_size"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/common_margin_long" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/common_margin_long"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="1. Title"
                android:textColor="@color/title"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="location"
                android:textColor="@color/content" />

            <TextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="category"
                android:textColor="@color/content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="분석 리뷰: "
                    android:textColor="@color/content" />

                <TextView
                    android:id="@+id/review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="review count"
                    android:textColor="@color/content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/keywords"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_restaurant_cell_keywords_height"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/keyword1_image"
                    android:layout_width="@dimen/search_restaurant_cell_keywords_height"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/common_margin_middle"
                    android:src="@drawable/ic_dining_black"
                    android:tint="@color/common_black" />

                <TextView
                    android:id="@+id/keyword1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/common_margin_middle"
                    android:text="keyword1"
                    android:textColor="@color/keyword" />

                <ImageView
                    android:id="@+id/keyword2_image"
                    android:layout_width="@dimen/search_restaurant_cell_keywords_height"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/common_margin_middle"
                    android:src="@drawable/ic_atm_black"
                    android:tint="@color/common_black" />

                <TextView
                    android:id="@+id/keyword2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/common_margin_middle"
                    android:text="keyword2"
                    android:textColor="@color/keyword" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/search_restaurant_cell_score_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8.2"
                android:textColor="@color/score"
                android:textSize="@dimen/search_restaurant_cell_score_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="불만 점수"
                android:textColor="@color/score"
                android:textSize="@dimen/search_restaurant_cell_score_label_text_size" />
        </LinearLayout>
    </LinearLayout>
</layout>